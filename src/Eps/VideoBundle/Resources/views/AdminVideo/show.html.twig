{% extends '::base.html.twig' %}

{% block content -%}
    <h1>Vidéo</h1>

    <hr />

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Année</th>
                <td>{{ entity.year }}</td>
            </tr>
            <tr>
                <th>Téléchargements</th>
                <td>{{ entity.downloadCount }}</td>
            </tr>
            <tr>
                <th>Accès</th>
                <td>{{ entity.access }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ entity.url }}</td>
            </tr>
            <tr>
                <th>Source</th>
                <td>{{ entity.source }}</td>
            </tr>
        </tbody>
    </table>

        <a class="btn btn-success" href="{{ path('admin_video') }}">
            Retour à la liste
        </a>
        <a class="btn btn-warning" href="{{ path('admin_video_edit', { 'id': entity.id }) }}">
            Editer
        </a>

    {{ form_start(delete_form) }}
        {{ form_row(delete_form.submit, { 'attr': {'class': 'btn btn-danger'} }) }}
    {{ form_end(delete_form) }}
</ul>
